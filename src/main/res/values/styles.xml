<resources>

    <!-- 🔹 Base style (مشترك بينهم) -->
    <style name="BaseStandardButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <!-- 🔸 الزرار العادي -->
    <style name="StandardButton" parent="BaseStandardButton">
        <item name="android:layout_height">52dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- 🔸 زرار Onboarding -->
    <style name="StandardButtonOnboarding" parent="BaseStandardButton">
        <item name="android:layout_height">52dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- أضف هذا في ملف res/values/styles.xml -->
    <style name="WhiteTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="materialThemeOverlay">@style/WhiteTextInputOverlay</item>
    </style>

    <style name="WhiteTextInputOverlay">
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>


    <style name="WhiteHintTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="WhiteInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
    </style>

    <style name="MyCustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FAFAFA</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>

</resources>
